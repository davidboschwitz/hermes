<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hermes.Views.OOBEPage"
             xmlns:hermes="clr-namespace:Hermes"
             Title="{x:Static hermes:Resources.OOBEPage_Title}">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="{x:Static hermes:Resources.OOBEPage_Label_Briefing}"
                HorizontalOptions="CenterAndExpand" />
            <Label Text="{x:Static hermes:Resources.OOBEPage_Label_Name}"/>
            <Entry x:Name="OOBEInputName"
                   Text="{Binding OOBEInputName}"
                   Margin="1"
                   TextColor="Black"
                   Keyboard="Chat"
                   ReturnCommand="OOBEInputURL_Focus"
                   ReturnType="Next"
                   HorizontalOptions="FillAndExpand" />
            <Label Text="" />
            <Entry x:Name="OOBEInputURL"
                   Text="{Binding OOBEInputURL}"
                   Margin="1"
                   TextColor="Black"
                   Keyboard="Url"/>
            <Button x:Name="CreateContactButton"
                    Text="{x:Static hermes:Resources.OOBEPage_Button_Next}"
                    Command="{Binding CreateContactCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>