<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hermes.Views.OOBEPage"
             xmlns:hermes="clr-namespace:Hermes"
             Title="Welcome to Hermes">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Hermes!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Please enter some information so we can get to know you"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Name"/>
            <Entry x:Name="OOBEInputName"
                   Text="{Binding OOBEInputName}"
                   Margin="1"
                   TextColor="Black"
                   Keyboard="Chat"
                   HorizontalOptions="FillAndExpand"
                   PlaceholderColor="LightGray"
                   Placeholder="" />
            <Button x:Name="CreateContactButton"
                    Text="{x:Static hermes:Resources.AddContactPage_Button_AddContact}"
                    Command="{Binding CreateContactCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>